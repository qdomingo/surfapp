{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Next.js Development Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build Next.js Project",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "problemMatcher": ["$tsc"],
      "group": "build"
    }
  ]
}
